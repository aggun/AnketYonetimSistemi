@using EntityLayer.Concrete
@model List<Personal>
@{
    ViewBag.Title = "MyInform";
    Layout = "~/Views/Shared/_PersonelLayout.cshtml";
}



<!DOCTYPE html>
<html>

<body class="hold-transition sidebar-mini">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Bilgiler</h1>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>
    <!-- Main content -->
    <section class="content">
        <!-- Default box -->
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Bilgilerim</h3>
                <div class="card-tools">
                    <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                        <i class="fas fa-minus"></i>
                    </button>
                    <button type="button" class="btn btn-tool" data-card-widget="remove" data-toggle="tooltip" title="Remove">
                        <i class="fas fa-times"></i>
                    </button>
                </div>
            </div>
            <div class="card-body p-0">
                <table class="table table-striped projects">
                    <thead>
                        <tr>
                            <th style="width: 20%">
                                Personal Adı
                            </th>
                            <th style="width: 20%">
                                Personal  Soyadı
                            </th>
                            <th tyle="width: 20%">
                                Personal Mail
                            </th>
                            <th tyle="width: 20%">
                                Personal Username
                            </th>
                            <th tyle="width: 20%">
                                Personal Password
                            </th>
                            <th>
                                Düzenle
                            </th>

                        </tr>
                    </thead>
                    <tbody>

                        @foreach (var item in Model)
                        {
                            <tr>

                                <td>
                                    @item.PersonalName
                                    <br />
                                </td>
                                <td>
                                    @item.PersonalSurname
                                    <br />
                                </td>
                                <td>
                                    @item.PersonalMail
                                    <br />
                                </td>
                                <td>
                                    @item.PersonalUsername
                                    <br />
                                </td>
                                <td>
                                    @item.PersonalPassword
                                    <br />
                                </td>
                                <td>
                                    <a href="/PersonelPanel/EditInform/@item.PersonalId/" class="btn btn-primary">Bilgilerimi Düzenle</a>
                                </td>
                                <td>
                                    <ul class="list-inline">
                                    </ul>
                                </td>

                            </tr>
                        }
                    </tbody>
                </table>
               

            </div>
            <!-- /.card-body -->
        </div>
        <!-- /.card -->
    </section>
</body>
</html>

