@using EntityLayer.Concrete
@model List<Manager>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_ManagerLayout.cshtml";
}

<!DOCTYPE html>
<html>

<body class="hold-transition sidebar-mini">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Bilgiler</h1>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>
    <!-- Main content -->
    <section class="content">
        <!-- Default box -->
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Bilgilerim</h3>
                <div class="card-tools">
                    <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                        <i class="fas fa-minus"></i>
                    </button>
                    <button type="button" class="btn btn-tool" data-card-widget="remove" data-toggle="tooltip" title="Remove">
                        <i class="fas fa-times"></i>
                    </button>
                </div>
            </div>
            <div class="card-body p-0">
                <table class="table table-striped projects">
                    <thead>
                        <tr>
                            <th style="width: 20%">
                                Yönetici Adı
                            </th>
                            <th style="width: 20%">
                                Yönetici  Soyadı
                            </th>
                            <th tyle="width: 20%">
                                Yönetici Mail
                            </th>
                            <th tyle="width: 20%">
                                Yönetici Username
                            </th>
                            <th tyle="width: 20%">
                                Yönetici Password
                            </th>
                            <th>
                                Düzenle
                            </th>

                        </tr>
                    </thead>
                    <tbody>

                        @foreach (var item in Model)
                        {
                            <tr>
                                <th>dede</th>
                                <td>
                                    @item.ManagerName
                                    <br />
                                </td>
                                <td>
                                    @item.ManagerSurname
                                    <br />
                                </td>
                                <td>
                                    @item.ManagerMail
                                    <br />
                                </td>
                                <td>
                                    @item.ManagerUsername
                                    <br />
                                </td>
                                <td>
                                    @item.ManagerPassword
                                    <br />
                                </td>
                                <td>
                                    <a href="/PersonelPanel/EditInform/@item.ManagerId/" class="btn btn-primary">Bilgilerimi Düzenle</a>
                                </td>
                                <td>
                                    <ul class="list-inline">
                                    </ul>
                                </td>

                            </tr>
                        }
                    </tbody>
                </table>


            </div>
            <!-- /.card-body -->
        </div>
        <!-- /.card -->
    </section>
</body>
</html>

