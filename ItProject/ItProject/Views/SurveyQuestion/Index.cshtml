@using EntityLayer.Concrete
@model List<SurveyQuestion>
@{ ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml"; }

@{ string color = "";
    string checkStatus = "";
    string statusColor = ""; }

<!DOCTYPE html>
<html>

<body class="hold-transition sidebar-mini">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>sorular</h1>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>
    <!-- Main content -->
    <section class="content">
        <!-- Default box -->
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Anket Soru İşlemleri</h3>
                <div class="card-tools">
                    <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                        <i class="fas fa-minus"></i>
                    </button>
                    <button type="button" class="btn btn-tool" data-card-widget="remove" data-toggle="tooltip" title="Remove">
                        <i class="fas fa-times"></i>
                    </button>
                </div>
            </div>
            <div class="card-body p-0">
                <table class="table table-striped projects">
                    <thead>
                        <tr>
                            <th style="width: 1%">
                                #
                            </th>
                            <th style="width: 20%">
                                Anket Adı
                            </th>
                            <th style="width: 10%">
                                Durum
                            </th>
                            <th style="width: 20%">
                            </th>
                        </tr>
                    </thead>
                    <tbody>

                        @foreach (var item in Model)
                        {
            <tr>
                <td>
                    @item.SurveyQuestionId
                </td>
                <td>
                    <a>
                        @item.SurveyQuestionText
                    </a>
                    <br />
                </td>

                <td>
                    @switch (item.SurveyQuestionStatus)
                    {
                        case true:
                            statusColor = "success";
                            break;
                        case false:
                            statusColor = "danger";
                            break;

                    }
                    <span class="badge badge-@statusColor">@item.SurveyQuestionStatus</span>
                </td>
                <td>
                    <ul class="list-inline">
                    </ul>
                </td>
            </tr>}
                    </tbody>
                </table>
            </div>
            <!-- /.card-body -->
        </div>
        <!-- /.card -->
    </section>
</body>
</html>
<a href="/SurveyQuestion/AddSurveyQuestion" class="btn btn-primary">Yeni anket Girişi</a>
